<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>Editing Group</h1>
      <%= form_with model: @group, local:true do |f| %>
      <%= f.label "グループ名" %><br>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label "紹介文" %><br>
      <%= f.text_area :introduction, class: 'form-control' %><br>
      <%= f.label "グループ画像" %><br>
      <%= f.file_field :group_image, class: 'pb-3', accept: 'image/*' %><br>
      <%= f.submit "Create Group", class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
